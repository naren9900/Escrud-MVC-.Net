@using proyectoMVC.Models;
@model List<Taller>

@{
    ViewData["Title"] = "Index de Taller";
}

@if (Model.Count != 0)
{
    <table class="table table-blue">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre</th>
                <th scope="col">Direccion</th>
                <th scope="col">Telefono</th>
                <th scope="col">Cantidad Empleados</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.Id</td>
                    <td>@e.NombreTienda</td>
                    <td>@e.Direccion</td>
                    <td>@e.Telefono </td>
                    <td>@e.Empleado </td>
                    <td><a class="btn btn-primary" asp-area="" asp-controller="Taller" asp-action="Actualizar" 
                         asp-route-id="@e.Id"
                         asp-route-nombretienda = "@e.NombreTienda"
                         asp-route-direccion = "@e.Direccion"
                         asp-route-telefono = "@e.Telefono"
                        asp-route-empleado = "@e.Empleado"> Editar</a>
                     </td>
                     <td><a class="btn btn-primary" asp-area="" asp-controller="Taller" asp-action="Delete" 
                         asp-route-id="@e.Id"
                         asp-route-nombretienda = "@e.NombreTienda"
                         asp-route-direccion = "@e.Direccion"
                         asp-route-telefono = "@e.Telefono"
                        asp-route-empleado = "@e.Empleado"> Eliminar</a>
                     </td> 
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="card">
        <div class="card-body">
            No hay datos.
        </div>
    </div>
}